@page
@model FamilyHubs.SharedKernel.Razor.Pages.Error.ErrorModel
@{
    ViewData["Title"] = "Page not found";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Page not found</h1>
        <p>If you typed the web address, check it is correct.</p>
        <p>If you pasted the web address, check you copied the entire address.</p>
        @if (Model.SupportEmail != "")
        {
            <p>If the problem continues, email us at <a href="mailto:@Model.SupportEmail">@Model.SupportEmail</a>.</p>
        }
        <p class="govuk-body"><a href="/">Back to homepage</a></p>
    </div>
</div>
