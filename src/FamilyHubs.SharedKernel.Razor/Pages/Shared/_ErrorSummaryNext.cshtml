@model FamilyHubs.SharedKernel.Razor.ErrorNext.IErrorState

@if (Model.HasErrors)
{
    @* you must supply a map of errors to errored html element ids *@
    ArgumentNullException.ThrowIfNull(Model.ErrorToHtmlElementId);

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <div class="govuk-error-summary" data-module="govuk-error-summary">
                <div role="alert">
                    <h2 class="govuk-error-summary__title">
                        There is a problem
                    </h2>
                    <div class="govuk-error-summary__body">
                        <ul class="govuk-list govuk-error-summary__list">
                            @foreach (var errorId in Model.ErrorIds)
                            {
                                var error = Model.GetError(errorId);
                                <li>
                                    <a href="#@(Model.ErrorToHtmlElementId(error))">@error.ErrorMessage</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
}