@using FamilyHubs.SharedKernel.Razor.FamilyHubsUi.Options
@model IFamilyHubsUiOptions

@if (Model.Phase != Phase.Release)
{
    <div class="govuk-phase-banner">
        <p class="govuk-phase-banner__content">
            <strong class="govuk-tag govuk-phase-banner__content__tag">
                @Model.Phase
            </strong>
            <span class="govuk-phase-banner__text">
                Please <a href="@Model.FeedbackUrl" rel="noreferrer noopener" target="_blank">take our feedback survey</a> to help us improve this new website.
            </span>
        </p>
    </div>
}